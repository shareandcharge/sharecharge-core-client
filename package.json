{
  "name": "sharecharge-core-client",
  "version": "0.0.1",
  "description": "Share & Charge Core Client for Charge Point Operators",
  "main": "index.js",
  "scripts": {
    "client": "ts-node main.ts",
    "test": "mocha --exit -r ts-node/register test/**/*.spec.ts",
    "test-watch": "mocha --watch --watch-extensions ts,js,json -r ts-node/register test/**/*.spec.ts",
    "geth-dev": "geth --dev --datadir=../.chaindata --dev.period 1 --rpc --rpcaddr 0.0.0.0 --ws --wsaddr 0.0.0.0 --wsorigins=* --wsapi=eth,personal,net,pubsub",
    "patch-contract": "cp ~/.sharecharge/contract.defs.local.json node_modules/sharecharge-contracts/contract.defs.local.json"
  },
  "bin": {
    "sc": "./bin/sc.sh"
  },
  "author": "MotionWerk GmbH",
  "license": "MIT",
  "dependencies": {
    "@motionwerk/sharecharge-lib": "^0.0.3",
    "body-parser": "^1.18.2",
    "express": "^4.16.3",
    "inversify": "^4.11.1",
    "js-yaml": "^3.10.0",
    "jsonwebtoken": "^8.1.1",
    "progress": "^2.0.0",
    "reflect-metadata": "^0.1.12",
    "sinon": "^4.5.0",
    "toml": "^2.3.3"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/mocha": "^2.2.48",
    "@types/node": "^9.6.2",
    "@types/winston": "^2.3.9",
    "chai": "^4.1.2",
    "mocha": "^5.0.5",
    "ts-node": "^5.0.0",
    "typescript": "^2.8.1",
    "winston": "^2.4.1",
    "yargs": "^11.1.0"
  }
}
